variable "tags_list" {
    default = ["rk" , "sk" , "pk"]
}

resource "aws_instance" "vm" {
    count = length(var.tags_list)
    ami =  "ami-00ca570c1b6d79f36"
    instance_type = "t3.micro"
    key_name = "rohan1"

    tags = {
         Name = "ec-${element(var.tags_list , count.index)}"
    }        

}
